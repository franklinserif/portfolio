---
import { clsx } from 'clsx'

interface Props {
  is404?: boolean
}

const { is404 = false } = Astro.props
const { pathname } = Astro.url
---

<body
  class={clsx(
    'flex flex-col bg-primary rounded-lg border-lines border xl:h-full w-full relative',
    {
      'h-full overflow-hidden': pathname === '/' || is404,
    }
  )}
>
  <slot />
</body>
