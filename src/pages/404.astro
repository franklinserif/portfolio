---
import Layout from '@layouts/Layout.astro'
---

<Layout is404={true}>
  <div class="flex flex-col justify-center items-center h-full w-full">
    <span class="text-super-big text-secondary">X__X</span>
    <h1 class="text-white text-body">Resource not found</h1>
    <h2 class="text-snippets text-secondary">Sorry you're stuck here</h2>
  </div>
</Layout>

<style>
  .text-super-big {
    font-size: 40px !important;
  }
</style>
